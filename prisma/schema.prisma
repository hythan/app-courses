// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admins {
  id Int @default(autoincrement()) @id
  name String 
  email String @unique
  password String 
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}

model Courses {
  id Int @default (autoincrement()) @id
  name String 
  goal String
  information String
  requirements String
  duration Int
  price Float
  classes Classes[]
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}

model Teachers {
  id Int @default (autoincrement()) @id
  name String
  email String @unique
  curriculum String
  classes Classes[]
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}

model Students {
  id Int @default (autoincrement()) @id
  name String
  email String @unique
  password String
  registrations Registrations[]
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}

model Classes {
  id Int @default (autoincrement()) @id
  name String
  course Courses @relation(fields:[courseId], references: [id])
  courseId Int
  registrations Registrations[]
  information String
  location String
  startDate DateTime
  classTimes String
  teacher Teachers @relation(fields:[teacherId], references: [id])
  teacherId Int
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}

model Registrations{
  id Int @default (autoincrement()) @id
  classId Int
  class Classes @relation(fields: [classId], references: [id])
  studentId Int
  student Students @relation(fields: [studentId], references: [id])
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
} 