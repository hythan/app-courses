// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id Int @default(autoincrement()) @id
  name String 
  email String @unique
  password String 
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}

model Course {
  id Int @default (autoincrement()) @id
  name String 
  goal String
  information String
  requirements String
  duration Int
  price Float
  classes Class[]
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}

model Teacher {
  id Int @default (autoincrement()) @id
  name String
  email String @unique
  curriculum String
  classes Class[]
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}

model Student {
  id Int @default (autoincrement()) @id
  name String
  email String @unique
  password String
  registrations Registration[]
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}

model Class {
  id Int @default (autoincrement()) @id
  name String
  course Course @relation(fields:[courseId], references: [id])
  courseId Int
  registrations Registration[]
  information String
  location String
  startDate DateTime
  classTimes String
  teacher Teacher @relation(fields:[teacherId], references: [id])
  teacherId Int
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}

model Registration {
  id Int @default (autoincrement()) @id
  classId Int
  class Class @relation(fields: [classId], references: [id])
  studentId Int
  student Student @relation(fields: [studentId], references: [id])
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
} 